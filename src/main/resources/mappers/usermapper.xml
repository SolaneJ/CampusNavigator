<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.solanej.mapper.UserMapper">
    <update id="updateUserInfo" parameterType="com.github.solanej.vo.UserInfo">
        UPDATE cn_user
        <set>
            <if test="username !=null">
                username = #{username},
            </if>
            <if test="password !=null">
                password = md5(#{password}),
            </if>
            <if test="email !=null">
                email = #{email},
            </if>
        </set>
        WHERE uid = #{uid}
    </update>
</mapper>